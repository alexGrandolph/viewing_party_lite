<center>
<h1>Viewing Party Lite</h1>
</center>

<center>
  <h2>Create a Movie Party for <%= @movie[:original_title] %></h2>
</center>

<center>
<%= button_to "Discover Page", "/users/#{@user.id}/discover", method: :get %>
</center>
<br><br><br><br>

<center>
<div id="new_party_form">
<%= form_with url: "/users/#{@user.id}/movies/#{@movie[:id]}/party/new", method: :post do |f| %>
  <%= f.label :movie_title, "Movie Title:" %>
  <%= f.text_field :movie_title, value: @movie[:original_title] %><br>
  <%= f.label :duration, "Duration of Party:" %>
  <%= f.text_field :duration, value: @movie[:runtime] %><br>
  <%= f.label :day, "Day:" %>
  <%= f.date_field :day %><br>
  <%= f.label :start_time, "Start Time:" %>
  <%= f.text_field :start_time, value: "7:00" %><br>



  <%= f.submit 'Create Party' %>
<% end %>
</div>
</center>