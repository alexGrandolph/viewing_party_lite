

<%= form_with url: 'login', method: :post, local: true do |form| %>
  <%= form.label :name, "Name:" %>
  <%= form.text_field :name %><br>

  <%= form.label :email, "Email:" %>
  <%= form.text_field :email %><br>

  <%= form.label :password, 'Password:' %>
  <%= form.password_field :password %><br>

  <%= form.submit 'Log In' %>

<% end %>